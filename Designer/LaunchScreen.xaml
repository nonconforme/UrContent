<UserControl x:Class="Designer.LaunchScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20,0">
                <TextBlock Style="{StaticResource Heading2}" Text="Projects" />
                <Separator />
                <Button Content="Project From Folder" Click="Button_Click" />
                <Label Content="Recent Projects" Margin="10" />
                <StackPanel Name="stackRecent">
                    
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
